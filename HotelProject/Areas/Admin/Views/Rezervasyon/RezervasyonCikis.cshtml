@model HotelProject.Models.Rezervasyon
@{
    ViewData["Title"] = "RezervasyonCikis";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<!-- Content Header (Page header) -->
<div class="content-header">
    <div class="container-fluid">
        <div class="row mb-2">
            <div class="col-sm-6">
                <h1 class="m-0">Rezervasyon Çıkış</h1>
            </div><!-- /.col -->
            <div class="col-sm-6">
            </div><!-- /.col -->
        </div><!-- /.row -->
    </div><!-- /.container-fluid -->
</div>
<!-- /.content-header -->
<!-- Main content -->
<section class="content">
    <div class="card">
        <div class="card-header">
            <h3 class="card-title">Rezervasyon çıkışını buradan yapabilirsiniz.</h3>
        </div>
        <div class="container-fluid">
            <!-- Small boxes (Stat box) -->
            <div class="card">
                <div class="card-body">
                    <form asp-action="RezervasyonCikis" method="post">
                        <div class="form-row">
                            <div class="form-group col-md-6">
                                <label for="cıkı">Çıkış Tarihi</label>
                                <input name="cikistarih" class="form-control" value="@DateTime.Now" readonly="readonly" />
                            </div>
                            <div class="form-group col-md-6">
                                <label for="adsoyad">Ek Ücret</label>
                                <input type="text" name="ekucret" class="form-control" placeholder="Ek Ücret" autocomplete="off">
                            </div>
                        </div>
                        <div class="form-row">
                            <div class="form-group col-md-6">
                                <label>Açıklama</label>
                                <input type="text" name="aciklama" class="form-control" placeholder="Açıklama" autocomplete="off">
                            </div>
                        </div>
                        <div class="form-group">
                        </div>
                        <input type="hidden" asp-for="Idno"/>
                        <input type="hidden" asp-for="OdaId"/>
                        <button asp-action="Index" type="button" class="btn btn-secondary">İptal</button>
                        <button type="submit" class="btn btn-primary">Kaydet</button>
                    </form>
                </div>
            </div>
        </div>
    </div>
</section>


